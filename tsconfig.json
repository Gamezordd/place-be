{
  "compilerOptions": {
    "emitDecoratorMetadata": true, 
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "commonjs", 
    "target": "es6",
    "sourceMap": true,
    "outDir": "build",
    "declaration": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "build"]
}
